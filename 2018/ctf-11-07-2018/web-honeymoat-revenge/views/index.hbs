<div class="thermostat">
<div style="font-weight: bold; margin-bottom: 10px; margin-top: 10px;">{{date}}</div>

<form action="/submit" method="POST" id="form">
<span style="margin-right: 20px">SET TEMP</span><input id="temp" name="temp" type="number" value="{{temp}}" min="0" max="100" style="width: 50px" /> Â°F<br/>
<button id="submit">Submit</button>
</form>
</div>

<p>
Note: Honeymoat (tm) is not responsible for surcharges and damages caused by extreme temperature choices.
</p>

<script>
var temp = document.getElementById("temp");
temp.addEventListener("change", function() {
    temp.setAttribute("min", "0");
    temp.setAttribute("max", "100");
    var val = parseInt(temp.value, 10);
    if (val < 0 || val > 100) {
        temp.value = 72;
    }
});

var submit = document.getElementById("submit");
var form = document.getElementById("form");
temp.addEventListener("submit", function() {
    var val = parseInt(temp.value, 10);
    if (val < 0 || val > 100) {
        temp.value = 72;
    } else {
        form.submit();
    }
});
</script>